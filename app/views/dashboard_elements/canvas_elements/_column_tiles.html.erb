<li class="mt-3">
  <div class="block p-5 bg-white rounded-lg shadow">
    <div class="flex justify-left py-2 mb-4" id="tile_title">
   
     <%= tile_title(element) %>
    </div>
  
    <div class="flex justify-between">
      <%= tile_contents(element) %>
    <div class="ml-6 flex items-center">
      <% element.users.distinct.first(3).each do |user| %>
        <span class="-ml-2 rounded-full border-2 border-white">
          <img class="h-6 w-6 rounded-full object-cover" src="<%= user.url %>" alt="profile photo">
        </span>
      <% end%>
    </div>
      
    </div>
    <div class="flex mt-2 justify-between items-baseline">
    
      <%= tile_link(element)%>

      <div>
        <span class="px-2 inline-flex items-center bg-teal-100 rounded">
          <svg class="h-2 w-2 text-teal-500" viewBox="0 0 8 8" fill="currentColor">
          <circle cx="4" cy="4" r="3" />
          </svg>
                    
          <%= tile_flag(element)%>           
          
        </span>
      </div>
    </div>
  </div>



</li>