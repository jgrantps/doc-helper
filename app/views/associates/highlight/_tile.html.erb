<%# passed through "users/highlight/indexes" to "users/dashboard/main_display" via yielded "content_for" block in view files%>
<%# displays all attribute data for current_user.packages %>
<%# build out company_package_path for package tiles to be linked to!!!%>


  <li class="mt-3" id="single tile">
    <%= link_to  company_associate_path(@company.id, associate.id), :class=>"block p-5 bg-white rounded-lg shadow"  do %>
    
      <div class="flex justify-between items-center py-2">     
        <h2 class="text-sm font-medium font-bold text-gray-900"><%= associate.name.upcase %></h2>
      </div>

      <div class="flex justify-between">
        <ul>
          <% @associate.packages.each do |document|  %>
          <li>
            <p class="text-sm font-medium text-gray-900 leading-snug"><%= document.name %></p>
          </li>
          <% end%>
        </ul>
      </div>

      <div class="flex mt-2 justify-between items-baseline">
        <div class="text-sm text-gray-600">
          <p class="text-sm text-gray-600"> <%= associate.company.positions.first.title %></p>
        </div>
        
        <div>
          <span class="px-2 inline-flex items-center bg-teal-100 rounded">
            <svg class="h-2 w-2 text-teal-500" viewBox="0 0 8 8" fill="currentColor">
            <circle cx="4" cy="4" r="3" />
            </svg>
            <span class="ml-1 py-1 text-sm font-medium leading-tight text-teal-900"><%= associate.name %></span>
          </span>
        </div>
      </div>
    <% end%>
  </li>

