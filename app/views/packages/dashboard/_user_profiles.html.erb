<%# passed to "companies/dashboard/main_display" to be rendered in companies/index view %>

<main class="p-3 inline-flex">
  <% ary.each do |ary_element| %>
    <div class="flex-shrink-0 ml-3 w-80 mt-2 p-3 bg-gray-100 rounded">
      <h3 clas="text-sm font-medium text-gray-900"><%= ary_element.titleize %></h3>
      <ul class="mt-2">
        <li class="mt-3">  
          <% @company.users.where(:role => ary_element).distinct.each do |associate| %>
            <%= render partial: 'packages/dashboard/package', locals: {:user_profiles => "user_profiles", :package => associate, :status => "role", :name => "name", :users => "associates"}%>  
           <% end %>
        </li>            
      </ul>
    </div>
  <% end %>  
</main>