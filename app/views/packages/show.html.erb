<%# controls rendering of top ribbon %>
<%= content_for :upper_block do %>
  <%= render partial: 'packages/dashboard/upper_block', locals: {:company_users => @package.users} %>
<% end %>

<%# controls rendering of main interactive section %>
<%= content_for :main_panel do %>
  <%= render partial: 'packages/dashboard/package_profiles', locals: {:ary => [true, false], :packkage => @package} %> 
<% end %>

<%# controls rendering of data sidebar %>
<%= content_for :data_sidebar do %>
  <%= render partial: 'packages/dashboard/data_sidebar', locals: {} %>
<% end %>


<%# controls rendering of user sidebar %>
<%= content_for :user_sidebar do %>
  <%= render partial: 'packages/dashboard/user_sidebar', locals: {:users => @package.users, :company => @package} %>
<% end %>
    

<%# Primary RenderLayer for the page (_main_display.html.erb) %>
<div>
  <% if current_user.admin? %>
    <%= render partial: 'packages/dashboard/main_display', locals: {:packages => Package.all, :title => @title} %>
  <% else%>
    <%= render partial: 'packages/dashboard/main_display', locals: {:packages => @packages, :title => @title} %> 
  <% end %>
</div>