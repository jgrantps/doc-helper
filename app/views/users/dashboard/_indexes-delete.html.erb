<%# passed to "users/dashboard/main_display" via "content_for :main_panel" in view files %>
<%# renders collection of current_user.packages by passing "user/dashboard/package" collection partial %>


<main class="p-3 inline-flex">
  <% package_status.each do |package_status| %>
    <div class="flex-shrink-0 ml-3 w-80 mt-2 p-3 bg-gray-100 rounded">
      <h3 clas="text-sm font-medium text-gray-900"><%= package_status.titleize %></h3>
      <ul class="mt-2">
        <li class="mt-3">                  
          <%= render partial: 'dashboard/canvas_elements/package', :collection => current_packages.send(package_status), locals: {:indexes => "indexes", :account => "account", :status => "status",:name => "name", :company => "company", :users => "users"} %>   
        </li>            
      </ul>
    </div>
  <% end %>  
</main>