<%# passed to "users/dashboard/main_display" to be rendered in users/index view %>

<main class="p-3 inline-flex">
  <% user_role_types.each do |user_roles| %>
    <div class="flex-shrink-0 ml-3 w-80 mt-2 p-3 bg-gray-100 rounded">
      <h3 clas="text-sm font-medium text-gray-900"><%= user_roles.titleize %></h3>
      <ul class="mt-2">
        <li class="mt-3">  
          <%#= ***** TEST - DELETE ***** render partial: 'users/dashboard_index/test', :collection => current_user.associates.send(user_roles), locals: {:specifier => "name"}%>   

          <% current_user.associates.send(user_roles).distinct.each do |associate| %>
            <%= render partial: 'users/dashboard/package', locals: {:package => associate, :status => "role", :name => "name", :users => "associates"}%>  
           <% end %>
        </li>            
      </ul>
    </div>
  <% end %>  
</main>