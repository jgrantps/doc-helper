<%# passed to "users/dashboard/main_display" to be rendered in users/index view %>

<main class="p-3 inline-flex">
  <% user_role_types.each do |status| %>
    <div class="flex-shrink-0 ml-3 w-80 mt-2 p-3 bg-gray-100 rounded">
      <h3 clas="text-sm font-medium text-gray-900"><%= status.titleize %></h3>
      <ul class="mt-2">
        <li class="mt-3">  
          <%#= render partial: 'users/dashboard_index/test', :collection => current_user.associates.send(status), locals: {:specifier => "name"}%>   

          <%= render partial: 'users/dashboard/package', :collection => users.associates.send(status), locals: {:specifier => "name"}%>   
        </li>            
      </ul>
    </div>
  <% end %>  
</main>