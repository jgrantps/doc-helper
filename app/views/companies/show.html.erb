<%# controls rendering of top ribbon %>
<%= content_for :upper_block do %>
  <%= render partial: 'companies/dashboard/upper_block', locals: {:company_users => @company.users} %>
<% end %>



<%# controls rendering of main interactive section %>
<%= content_for :main_panel do %>
  <%= render partial: 'companies/dashboard/company_profiles', locals: {:ary => @company.accounts} %> 
<% end %>

<%# controls rendering of data sidebar %>
<%= content_for :data_sidebar do %>
  <%= render partial: 'companies/dashboard/data_sidebar', locals: {} %>
<% end %>


<%# controls rendering of user sidebar %>
<%= content_for :user_sidebar do %>
  <%= render partial: 'companies/dashboard/user_sidebar', locals: {} %>
<% end %>
    

<%# Primary RenderLayer for the page (_main_display.html.erb) %>
<div>
  <% if current_user.admin? %>
    <%= render partial: 'companies/dashboard/main_display', locals: {:packages => Package.all, :title => @title} %>
  <% else%>
    <%= render partial: 'companies/dashboard/main_display', locals: {:packages => @packages, :title => @title} %> 
  <% end %>
</div>