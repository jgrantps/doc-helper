<%# passed to "users/dashboard/main_display" via yielded "content_for :upper_block" block in view file %>
<%# displays upper ribbon in browser, includeing search bar, "new package" button, etc... %>
<%# Iterates on "users/dashboard/avatar" partial for avatar imaging %>


<div class="flex-shrink-0 border-b-2 border-gray-200">
  <header class="px-6 ">
    <div class="flex items-center justify-between py-2">
      <div class="flex items-center">
        <h2 class="text-2xl font-semibold text-gray-900 leading-tight"><%= @title %></h2>

        <div class="ml-6 flex items-center">

          <% @company.users.where(:role => user_role).each do |user| %>
            <%= render partial: 'users/dashboard/avatar', locals: {:avatar => user} %>
          <% end %>
        </div>
      </div>
      <div class="flex">
        <span class="inline-flex p-1 bg-gray-200 border rounded-lg items-center">
          <button class="px-2 py-1 rounded">
            <svg class="h-5 w-5 text-gray-600 " viewBox="0 0 128 128" >
              <path d="M112 6H12C5.4 6 0 11.4 0 18s5.4 12 12 12h100c6.6 0 12-5.4 12-12s-5.4-12-12-12zM112 50H12C5.4 50 0 55.4 0 62s5.4 12 12 12h100c6.6 0 12-5.4 12-12s-5.4-12-12-12zM112 94H12c-6.6 0-12 5.4-12 12s5.4 12 12 12h100c6.6 0 12-5.4 12-12s-5.4-12-12-12z"/>
            </svg>
          </button>  
          <button class="px-2 py-1  bg-white rounded shadow">
            <svg class="h-5 w-5 text-gray-600 " viewBox="0 0 271.673 271.673">
              <path d="M114.939 0H10.449C4.678 0 0 4.678 0 10.449v104.49c0 5.771 4.678 10.449 10.449 10.449h104.49c5.771 0 10.449-4.678 10.449-10.449V10.449C125.388 4.678 120.71 0 114.939 0zM261.224 0h-104.49c-5.771 0-10.449 4.678-10.449 10.449v104.49c0 5.771 4.678 10.449 10.449 10.449h104.49c5.771 0 10.449-4.678 10.449-10.449V10.449C271.673 4.678 266.995 0 261.224 0zM114.939 146.286H10.449C4.678 146.286 0 150.964 0 156.735v104.49c0 5.771 4.678 10.449 10.449 10.449h104.49c5.771 0 10.449-4.678 10.449-10.449v-104.49c0-5.771-4.678-10.449-10.449-10.449zM261.224 146.286h-104.49c-5.771 0-10.449 4.678-10.449 10.449v104.49c0 5.771 4.678 10.449 10.449 10.449h104.49c5.771 0 10.449-4.678 10.449-10.449v-104.49c0-5.771-4.678-10.449-10.449-10.449z"/>
            </svg>
          </button>  
        </span>
        <button class="ml-5 px-4 py-2 flex items-center text-sm font-medium text-white bg-gray-800 rounded-lg hover:bg-gray-700">
          <svg class="h-3 w-3 " height="568.89" viewBox="0 0 426.67 426.67" width="568.89">
            <path d="M410.67 229.33H16a16 16 0 010-32h394.67a16 16 0 010 32zm0 0" fill="white"/>
            <path d="M213.33 426.67a16 16 0 01-16-16V16a16 16 0 0132 0v394.67a16 16 0 01-16 16zm0 0" fill="white"/>
          </svg>
        <span class="ml-2">New Package</span>
        </button>
 
      </div>
    </div>
  </header>
</div>